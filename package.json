{
  "name": "safecodechecker",
  "displayName": "safecodechecker",
  "description": "a vs code extension that checks if your code is safe",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "safecodechecker.checkcode",
        "title": "check for safe code"
      },
      {
        "command": "safecodechecker.clear",
        "title": "clear code diagnostics"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "safecodechecker.checkcode",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "safeCodeSidebar",
          "title": "Safe Code",
          "icon": "media/shield.svg"
        }
      ]
    },
    "views": {
      "safeCodeSidebar": [
        {
          "id": "safeCodeReport",
          "name": "Code Safety Report"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.1"
  }
}
