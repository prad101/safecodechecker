{
  "name": "safecodechecker",
  "displayName": "safecodechecker",
  "description": "a vs code extension that checks if your code is safe",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "safecodechecker.checkcode",
        "title": "check for safe code"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "safecodechecker.checkcode",
          "group": "navigation"
        }
    ]
  },
  "viewsContainers": {
    "activitybar": [
      {
        "id": "safeCodeSidebar",
        "title": "Safe Code",
        "icon": "media/shield.svg"
      }
    ]
  },
  "views": {
    "safeCodeSidebar": [
      {
        "id": "safeCodeReport",
        "name": "Code Safety Report"
      }
    ]
  }
  },
  "scripts": {
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
